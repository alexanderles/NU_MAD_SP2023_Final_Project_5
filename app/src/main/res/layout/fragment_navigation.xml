<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/NavigationConstraintLayout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#FFFFFF"
    tools:context=".NavigationFragment">

    <ImageView
        android:id="@+id/imageView_home_nav"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_marginStart="40dp"
        android:layout_marginTop="16dp"
        android:layout_marginBottom="16dp"
        android:src="@drawable/ic_home"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/imageView_search_nav"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_marginStart="50dp"
        android:src="@drawable/ic_search_nav"
        app:layout_constraintBottom_toBottomOf="@+id/imageView_home_nav"
        app:layout_constraintStart_toEndOf="@+id/imageView_home_nav"
        app:layout_constraintTop_toTopOf="@+id/imageView_home_nav" />

    <ImageView
        android:id="@+id/imageView_calendar_nav"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_marginEnd="50dp"
        android:src="@drawable/ic_calendar"
        app:layout_constraintBottom_toBottomOf="@+id/imageView_search_nav"
        app:layout_constraintEnd_toStartOf="@+id/imageView_profile_nav"
        app:layout_constraintTop_toTopOf="@+id/imageView_search_nav" />

    <ImageView
        android:id="@+id/imageView_profile_nav"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_marginEnd="40dp"
        android:src="@drawable/ic_profile"
        app:layout_constraintBottom_toBottomOf="@+id/imageView_calendar_nav"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@+id/imageView_calendar_nav" />
</androidx.constraintlayout.widget.ConstraintLayout>