<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/event_details_owner_container"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Events.OwnerEventView">

    <TextView
        android:id="@+id/event_title_text_owner"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="24dp"
        android:fontFamily="@font/roboto"
        android:text="@string/event_title"
        android:textColor="@color/black"
        android:textSize="18sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/event_details_image_owner"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:contentDescription="@string/northeaster_default"
        android:src="@drawable/default_image"
        app:layout_constraintStart_toStartOf="@+id/event_title_text_owner"
        app:layout_constraintTop_toBottomOf="@+id/event_title_text_owner" />

    <TextView
        android:id="@+id/event_details_title_owner"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="24dp"
        android:fontFamily="@font/roboto"
        android:textColor="@color/black"
        android:textSize="18sp"
        android:textStyle="bold"
        app:layout_constraintStart_toEndOf="@+id/event_details_image_owner"
        app:layout_constraintTop_toTopOf="@+id/event_details_image_owner" />

    <TextView
        android:id="@+id/event_details_organizer_owner"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:fontFamily="@font/roboto"
        android:textColor="@color/black"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="@+id/event_details_title_owner"
        app:layout_constraintTop_toBottomOf="@+id/event_details_title_owner" />

    <TextView
        android:id="@+id/event_details_organizer_email_owner"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:fontFamily="@font/roboto"
        android:textColor="@color/black"
        android:textSize="12sp"
        app:layout_constraintStart_toStartOf="@+id/event_details_title_owner"
        app:layout_constraintTop_toBottomOf="@+id/event_details_organizer_owner" />

    <TextView
        android:id="@+id/event_details_date_owner"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:fontFamily="@font/roboto"
        android:textColor="@color/black"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="@+id/event_details_image_owner"
        app:layout_constraintTop_toBottomOf="@+id/event_details_image_owner" />

    <TextView
        android:id="@+id/event_details_location_owner"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:fontFamily="@font/roboto"
        android:textColor="@color/black"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="@+id/event_details_image_owner"
        app:layout_constraintTop_toBottomOf="@+id/event_details_date_owner" />

    <TextView
        android:id="@+id/event_details_description_owner"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:fontFamily="@font/roboto"
        android:textColor="@color/black"
        app:layout_constraintStart_toStartOf="@+id/event_details_location_owner"
        app:layout_constraintTop_toBottomOf="@+id/event_details_location_owner" />

    <Button
        android:id="@+id/button_user_event_edit_owner"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="32dp"
        android:layout_marginTop="32dp"
        android:backgroundTint="@color/campus_hub_color"
        android:fontFamily="@font/roboto"
        android:paddingTop="16dp"
        android:paddingBottom="16dp"
        android:text="@string/edit_text"
        android:textAllCaps="false"
        android:textSize="20sp"
        android:textStyle="bold"
        app:cornerRadius="16dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/event_details_description_owner" />

    <Button
        android:id="@+id/button_user_event_delete_owner"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="32dp"
        android:layout_marginEnd="32dp"
        android:backgroundTint="@color/campus_hub_red"
        android:fontFamily="@font/roboto"
        android:paddingTop="16dp"
        android:paddingBottom="16dp"
        android:text="@string/delete_text"
        android:textAllCaps="false"
        android:textSize="20sp"
        android:textStyle="bold"
        app:cornerRadius="16dp"
        app:layout_constraintBottom_toBottomOf="@+id/button_user_event_edit_owner"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/button_user_event_edit_owner"
        app:layout_constraintTop_toTopOf="@+id/button_user_event_edit_owner" />

</androidx.constraintlayout.widget.ConstraintLayout>